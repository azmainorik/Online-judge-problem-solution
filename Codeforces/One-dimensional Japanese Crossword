    #include<iostream>
    using namespace std;
     
    int main(){
     
    int N;
    cin>>N;
     
    char a[N+1];
    cin>>a;
     
    int c1=0,c2=0;ar1[N+1],b=1,w=0,p1=0,p=0,ar1[0]=0;
            
    for(int i=0;a[i]!='\0';i++){
    	for(int j=w;a[j]!='\0';j++){
    		w++;
    	if(a[j]=='B')
      {			
    	 c1++;	
    	 c2=-1;
    	}
    	else{
      	p1=-1;				
    		break;
    	} 
    }
   	if(p1!=-1)
   	p=-1;
    		
    ar1[b++]=c1;	
   	c1=0;	
     
    if(a[w]=='\0')
    break;
     
    }
    int m=0;
    			
   for(int i=0;i<=b-1;i++){
    if(ar1[i]!=0)
    m++;
    	}
    		
   if(p==-1)
   cout<<b-1<<endl;
   else{
   	if(c2==-1)
    cout<<m<<endl;
    else
   	cout<<0<<endl;
   	}
    	
   for(int i=0;i<=b-1;i++){
     	if(ar1[i]!=0)
    	cout<<ar1[i]<<" " ;	
    	}     
 }
