    #include<iostream>
    using namespace std;
    				
    				
    int main(){
   			
    long long 	int n;    				
    cin>>n;    				
    long long int k;    				
    if(n%2==0){
    k=n/2;
    cout<<k<<endl;
    
    for(int i=1;i<=k;i++){
   		cout<<2<<" ";
   	}	
    cout<<endl;
   	}
  	else
  	{
  		int r;
  		r=n-3;
  		k=r/2;
  		cout<<k+1<<endl;    				
    	for(int i=1;i<=k;i++){
   		cout<<2<<" ";
   	}	
   		cout<<3<<endl;
  	}
 }

