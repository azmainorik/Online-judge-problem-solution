#include<iostream>
#include<algorithm>
#include<math.h>

using namespace std;
    		
    		
int main(){
    				
long long int t,s,x;
    			
cin>>t>>s>>x;
    			
if(t==x)
cout<<"YES"<<endl;
else
if(s>x||t>x)
cout<<"NO"<<endl;
else{
if((x-t)!=0&&((x-t)-1)!=0){
if((x-t)%s==0||((x-t)-1)%s==0)
cout<<"YES"<<endl;
else
cout<<"NO"<<endl;
}
else
	cout<<"NO"<<endl;
}
}

