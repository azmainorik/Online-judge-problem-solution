#include<iostream>
 
 
		using namespace std;	
		
		
		int main(){
		
		int n;		
		cin>>n;
		
		int arr[n+1];
		
		
		for(int i=0;i<n;i++)
			cin>>arr[i];			
			int sum=0,ch=0,t=0;
			
			for(int i=0;i<n;i++){
			  sum=sum+arr[i];
				
			if(arr[i+1]==0)
			{
				if(sum%2!=0)
				{
					ch=-2; break;
				}
				
			}
				
			}
				
			
			if(ch!=-2)
				{
			if(sum%2==0)
				cout<<"YES"<<endl;
			else
				cout<<"NO"<<endl;
			}
			else
				cout<<"NO"<<endl;
			
			
			
			
			}
